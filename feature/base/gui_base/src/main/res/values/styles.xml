<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:supportsRtl">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Text.Header" parent="Text">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/text_header_size</item>
    </style>

    <style name="Text.Standard" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
    </style>

    <style name="Text.Tab" parent="Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_standard_size</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>